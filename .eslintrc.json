{
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 5,
        "ecmaFeatures": {
            "impliedStrict": true   
        }
    },
    "plugins": [
        "es5"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:es5/no-es2015"
    ],
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}